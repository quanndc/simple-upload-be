generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id               Int       @id @default(autoincrement())
  description      String
  originalName     String
  storagePath      String    @unique
  publicUrl        String
  createdAt        DateTime  @default(now())
  user_firebase_id String?
  comments         Comment[]
  User             User?     @relation(fields: [user_firebase_id], references: [firebaseUid], onDelete: Cascade, onUpdate: NoAction)
}

model Comment {
  id               Int      @id @default(autoincrement())
  body             String
  photoId          Int
  createdAt        DateTime @default(now())
  user_firebase_id String?
  photo            Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User             User?    @relation(fields: [user_firebase_id], references: [firebaseUid], onDelete: Cascade, onUpdate: NoAction)
}

model User {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  name        String?
  email       String?
  firebaseUid String    @unique
  picture     String?
  Comment     Comment[]
  Photo       Photo[]
}
